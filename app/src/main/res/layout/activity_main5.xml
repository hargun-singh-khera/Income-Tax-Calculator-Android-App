<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up for free to get started with the utility!"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Full Name"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_person_24"
                android:inputType="textPersonName"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Email Address"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_email_24"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textSize="19sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp" />

            <RadioGroup
                android:id="@+id/rgrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:orientation="horizontal"
                android:layout_marginStart="120dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Female" />
            </RadioGroup>

            <EditText
                android:id="@+id/userPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:hint="Phone Number"
                android:drawableStart="@drawable/ic_call_24"
                android:inputType="number"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/userDOB"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Date Of Birth"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:drawableStart="@drawable/ic_calendar_month_24"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Password"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_lock_24"
                android:inputType="textPassword"
                android:drawablePadding="10dp" />

            <Button
                android:id="@+id/btnLetsGetStarted"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:cornerRadius="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="20dp"
                android:text="Let's Get Started" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:text="@string/terms_and_conditions" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:indeterminate="true"
                android:layout_marginBottom="15dp" />

            <TextView
                android:id="@+id/loggingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:layout_marginBottom="23dp"
                android:textSize="15sp"
                android:textColor="@color/cardview_dark_background" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>